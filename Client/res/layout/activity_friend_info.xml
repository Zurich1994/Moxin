<!-- android:background="#E1E1BB" -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.heu.moxin.activity.FriendInfoActivity" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:gravity="center_vertical" >

        <include
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            layout="@layout/commom_back_btn"
            android:onClick="back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/personal_profile"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>
    <!-- 分割线 -->

    <TextView
        android:layout_below="@id/title"
        android:id="@+id/split"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#ffffff" />

    <LinearLayout
        android:layout_below="@id/split"
        android:id="@+id/tou"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tu"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/default_useravatar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/mid"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:background="@drawable/btn_bottom_selector"
                android:padding="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:paddingLeft="10dip"
                    android:text="陌信ID："
                    android:textColor="#829555"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dip"
                    android:text="2103743232"
                    android:textColor="#eda24d"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:background="@drawable/btn_bottom_selector"
                android:padding="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:paddingLeft="10dip"
                    android:text="昵称："
                    android:textColor="#829555"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dip"
                    android:text="Gage"
                    android:textColor="#eda24d"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:background="@drawable/btn_bottom_selector"
                android:padding="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:paddingLeft="10dip"
                    android:text="gender："
                    android:textColor="#829555"
                    android:textSize="14sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dip"
                    android:text="男"
                    android:textColor="#eda24d"
                    android:textSize="12sp"
                    android:typeface="serif" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tou"
        android:background="#EBDFB7"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/tv_lable"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/btn_bottom_selector"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:paddingLeft="10dip"
                android:text="标签"
                android:textColor="#829555"
                android:textSize="17sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/tv_labels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dip"
                android:text="超人 程序狂魔  开拓者"
                android:textColor="#eda24d"
                android:textSize="14sp"
                android:typeface="serif" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#E1E1BB" />

        <RelativeLayout
            android:id="@+id/tv_region"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/btn_bottom_selector"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:paddingLeft="10dip"
                android:text="地区"
                android:textColor="#829555"
                android:textSize="17sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dip"
                android:text="中国"
                android:textColor="#eda24d"
                android:textSize="14sp"
                android:typeface="serif" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#E1E1BB" />

        <RelativeLayout
            android:id="@+id/tv_user_acc"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/btn_bottom_selector"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:paddingLeft="10dip"
                android:text="签名："
                android:textColor="#829555"
                android:textSize="17sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/tv_user_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dip"
                android:text="不要迷恋哥，哥是杀马特"
                android:textColor="#eda24d"
                android:textSize="14sp"
                android:typeface="serif" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>