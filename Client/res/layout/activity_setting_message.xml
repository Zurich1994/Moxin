<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:gravity="center_vertical" >

        <include
            android:id="@+id/back"
            android:onClick="back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            layout="@layout/commom_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/set_conf"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>
    <!-- 分割线 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#ffffff" />
    <!-- 新增个人资料设置 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:gravity="bottom|left"
            android:paddingLeft="10dip"
            android:text="新消息提醒"
            android:textColor="#eda24d" />
        <!-- 分割线 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#666666" />
    </LinearLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_switch_notification"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/btn_bottom_selector"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dip"
                android:text="接收新消息通知"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:typeface="serif" />

            <ImageButton
                android:id="@+id/iv_switch_open_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/open_icon"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#E6E6E6" />

        <RelativeLayout
            android:id="@+id/rl_switch_sound"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/btn_bottom_selector"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dip"
                android:text="声音"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:typeface="serif" />

            <ImageButton
                android:id="@+id/iv_switch_open_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_set_selector"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textview2"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#E6E6E6" />

        <RelativeLayout
            android:id="@+id/rl_switch_vibrate"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/btn_bottom_selector"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dip"
                android:text="震动"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:typeface="serif" />

            <ImageButton
                android:id="@+id/iv_switch_open_vibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_set_selector"
                android:visibility="visible" />
        </RelativeLayout>
        <!-- 分割线 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#E6E6E6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:gravity="bottom|left"
                android:paddingLeft="10dip"
                android:text="聊天设置"
                android:textColor="#eda24d" />
            <!-- 分割线 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#666666" />

       
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_switch_speaker"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/btn_bottom_selector"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dip"
                android:text="使用扬声器播放语音"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:typeface="serif" />

            <ImageButton
                android:id="@+id/iv_switch_open_speaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_set_selector"
                android:visibility="visible" />
        </RelativeLayout>
        <!-- 分割线 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#E6E6E6" />


        <LinearLayout
            android:id="@+id/ll_black_list"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/btn_bottom_selector"
            android:padding="10dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="通讯录黑名单"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </LinearLayout>
        <!-- 分割线 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="#E6E6E6" />
    </LinearLayout>

</LinearLayout>