<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >
    <!--分割线 -->
                 <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="#0000FF" />
                  <!-- 个人资料 -->
               
                <LinearLayout
                    android:id="@+id/ll_black_list"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/btn_bottom_selector"
                    android:clickable="true"
                    android:padding="10dip" >

                    <TextView
                        android:id="@+id/id"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:text="评分"
                        android:focusable="false"
                        android:textColor="#ffffff"
                        android:textSize="17sp" />
                </LinearLayout>
                     <!--分割线 -->
                 <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="#E6E6E6" />
               <!-- 消息与提醒 -->
                <LinearLayout
                    android:id="@+id/ll_black_remind"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:clickable="true"
                    android:background="@drawable/btn_bottom_selector"
                    android:padding="10dip" >

                    <TextView
                        android:id="@+id/msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:text="欢迎页"
                        android:textColor="#ffffff"
                        android:focusable="false"
                        android:textSize="17sp" />
                </LinearLayout>
                     <!--分割线 -->
                 <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="#E6E6E6" />
                <!-- 小熊聊天 -->
                <LinearLayout
                    android:id="@+id/ll_black_chat"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:clickable="true"
                    android:background="@drawable/btn_bottom_selector"
                    android:padding="10dip" >

                    <TextView
                        android:id="@+id/chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:text="功能介绍"
                        android:focusable="false"
                        android:textColor="#ffffff"
                        android:textSize="17sp" />
                </LinearLayout>
                     <!--分割线 -->
                 <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="1dip"                 
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="#E6E6E6" />
                 <!-- 关于软件 -->
                <LinearLayout
                    android:id="@+id/ll_black_about"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:clickable="true"
                    android:background="@drawable/btn_bottom_selector"
                    android:padding="10dip" >

                    <TextView
                        android:id="@+id/about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dip"
                        android:text="帮助与反馈"
                        android:focusable="false"
                        android:textColor="#ffffff"
                        android:textSize="17sp" />
                </LinearLayout>
                <!--分割线 -->
                 <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="#E6E6E6" />
                 <!-- 昵称 -->
                <RelativeLayout
                    android:id="@+id/rl_user_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/btn_bottom_selector"
                    android:padding="10dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dip"
                        android:text="版本"
                        android:textColor="#ffffff"
                        android:textSize="17sp"
                        android:typeface="serif" />
                     <TextView
                        android:id="@+id/tv_user_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="10dip"
                        android:text="1.0"
                        android:textColor="#eda24d"
                        android:textSize="14sp"
                        android:typeface="serif" />
 
                </RelativeLayout>

</LinearLayout>
